{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "../../tsconfig",
  "compilerOptions": {
    "allowJs": false,
    "composite": false,
    "incremental": true,
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["../../node_modules/@types", "./types"],
    "types": ["reflect-metadata", "jest", "node"],
    "lib": ["ES2020", "DOM"],
    "target": "ES2020"
  },
  "include": ["./src", "./test"]
}
